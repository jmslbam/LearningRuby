<% content_for :body_content_title do %>
  <%= @client.name %>
<% end %>

<% content_for :body do %>
  <h2><%=raw @client.name %></h2>

  <h2>Logo</h2>
  <%= image_fu @client.logo, nil %>
  <h2>Descripition</h2>
  <p>
    <%=raw @client.descripition %>
  </p>
<% end %>

<% content_for :side_body do %>
  <aside class="aside">
    <h3><%= t('.other') %></h3>
    <ul class="clients">
      <% @clients.each do |client| %>
        <li>
          <%= link_to client.name, refinery.clients_client_path(client) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
