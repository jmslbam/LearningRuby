<% content_for :body_content_title do %>
  <%= @project.name %>
<% end %>

<% content_for :body do %>
  <h2><%=raw @project.name %></h2>
  
  <h2>Releasedate</h2>
  <time>
    <%=raw @project.releasedate %>
  </time>
  
  <h2>Thumbnail</h2>
  <p>
    <%= image_fu @project.thumbnail, nil %>
  </p>

  <h2>Description</h2>
  <p>
    <%=raw @project.description %>
  </p>
<% end %>

<%=raw content_for :side_body do %>
  <aside class="aside">
    <h3><%= t('.other') %></h3>
    <ul class="projects">
      <% @projects.each do |project| %>
        <li>
          <%= link_to project.name, refinery.projects_project_path(project) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
